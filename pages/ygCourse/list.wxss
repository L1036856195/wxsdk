/* pages/ygCourse/list.wxss */
.list{
  margin-bottom: 20rpx;
  background: #f2f2f2;
  font-size: 0.8rem;
  padding: 5rpx 20rpx;
  overflow: hidden;
}
.list .course-name{
  padding-bottom: 10rpx;
}
.list .course-time{
  margin: 10rpx 0;
}
.list .course-time .course-section{
  margin-right: 20rpx;
}
.list .course-time .course-nums{
  color: red;
}
.list list-bot-box{
  overflow: hidden;
}
.list .teacher-list{
  display: flex;
  float: left;
}
.list .teacher-list .teacher-li{ 
 display: flex;flex-direction: column;justify-content: space-between;align-items: center;padding: 10rpx 0;margin-right: 50rpx;
}
.list .teacher-list .teacher-li .teacher-avatar{
  width: 53rpx;
  height: 53rpx;
  border-radius: 50%;
}
.list .teache-list .teacher-li .teacher-name{
  font-size: 22rpx;color: #999999;line-height: 52rpx;word-break:keep-all;white-space:nowrap;
}
.list .list-bottom{
  display: flex;
  float: right;
  flex-direction: column;justify-content: space-between;text-align: right;
  padding-top: 30rpx;
}
.list .list-bottom .course-price{
  font-weight: bold;
  color: red;
}
.list .list-bottom .course-profile{
  font-size: 20rpx;
}
.list .list-bottom .course-profile .color-red{
  color: red;
}